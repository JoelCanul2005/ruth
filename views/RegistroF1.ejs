<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Registro</title>
  <link rel="stylesheet" href="css/Principal/style.css">
</head>
<body>
  <div class="container">
    <div class="left-column">
      <img src="/Imagenes/psicologo-tudo-sobre-psicologia-1-1-1024x683.jpg" alt="">
    </div>
    <div class="right-column">
      <div class="content">
        <div class="form-box">
          <h2>Crear una cuenta</h2>
          <form id="registrationForm" action="#" method="POST">
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required>
            
            <label for="password">Contraseña:</label>
            <input type="password" id="password" name="password" required>
            
            <button type="submit" id="registerButton">Registrarse</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <script src="js/Principal/main.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
        // Verificar la clave de autorización en localStorage
        const claveAutorizacionAdulto = localStorage.getItem('claveAutorizacionAdulto');

        if (claveAutorizacionAdulto) {
            // Redirigir al inicio de sesión si no hay clave
            window.location.href = '/A';
        }
    });
  </script>
</body>

</html>
